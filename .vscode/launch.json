{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Server",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run start:debug",
      "cwd": "${workspaceFolder}/backend"
    },
    {
      "name": "Serve Frontend",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start"]
    },
    {
      "name": "Launch Frontend Debugging",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "runtimeArgs": ["--remote-debugging-port=9222"],
      "webRoot": "${workspaceFolder}/frontend"
    },
    {
      "name": "Start and debug frontend component tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "test:watch"]
    },
    {
      "name": "WebdriverIO run current test",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "port": 5859,
      "runtimeExecutable": "${workspaceRoot}/frontend/node_modules/.bin/wdio",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/frontend/node_modules/.bin/wdio.cmd"
      },
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "args": [
        "frontend/test_js/config/wdio.conf.js",
        "--local",
        "--local-mockserver",
        "--spec-reporter",
        "--spec",
        "${relativeFile}"
      ],
      "skipFiles": [],
      "env": {
        "DEBUG": "noBreak"
      }
    },
    {
      "name": "WebdriverIO run all tests",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "port": 5859,
      "runtimeExecutable": "${workspaceRoot}/frontend/node_modules/.bin/wdio",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/frontend/node_modules/.bin/wdio.cmd"
      },
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "args": [
        "frontend/test_js/config/wdio.conf.js",
        "--local",
        "--local-mockserver",
        "--spec-reporter"
      ],
      "skipFiles": [],
      "env": {
        "DEBUG": "noBreak"
      }
    },
    {
      "name": "WebdriverIO run current integration test",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "port": 5859,
      "runtimeExecutable": "${workspaceRoot}/integration-tests/node_modules/.bin/wdio",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/integration-tests/node_modules/.bin/wdio.cmd"
      },
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "args": [
        "integration-tests/test/ui/config/wdio.conf.js",
        "--local",
        "--local-mockserver",
        "--spec-reporter",
        "--spec",
        "${relativeFile}"
      ],
      "skipFiles": [],
      "env": {
        "DEBUG": "noBreak"
      }
    },
    {
      "name": "WebdriverIO run all integration tests",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "port": 5859,
      "runtimeExecutable": "${workspaceRoot}/integration-tests/node_modules/.bin/wdio",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/integration-tests/node_modules/.bin/wdio.cmd"
      },
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "args": [
        "integration-tests/test/ui/config/wdio.conf.js",
        "--local",
        "--local-mockserver",
        "--spec-reporter"
      ],
      "skipFiles": [],
      "env": {
        "DEBUG": "noBreak"
      }
    },
    {
      "name": "Run current UI Perf test file",
      "cwd": "${workspaceFolder}/load-test",
      "internalConsoleOptions": "openOnSessionStart",
      "program": "node_modules/mocha/bin/mocha",
      "args": ["--config", "perf-test/.mocharc.cjs", "--no-timeout", "--colors", "${file}"],
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "test",
        "GAS_URL": "http://${input:kubernetesMasterNode}${input:servicePath}"
      },
      "type": "node"
    },
    {
      "name": "Run all tests in Backend",
      "internalConsoleOptions": "openOnSessionStart",
      "cwd": "${workspaceFolder}/backend",
      "program": "node_modules/mocha/bin/mocha",
      "args": ["--loader=testdouble", "--no-timeout", "--colors", "./test/**/*.test.js"],
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "test"
      },
      "type": "node",
      "presentation": {
        "hidden": false,
        "group": "ui-tests",
        "order": 1
      }
    },
    {
      "name": "Run current test file in Backend",
      "cwd": "${workspaceFolder}/backend",
      "internalConsoleOptions": "openOnSessionStart",
      "program": "node_modules/mocha/bin/mocha",
      "args": ["--loader=testdouble", "--no-timeout", "--colors", "${file}"],
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "test"
      },
      "type": "node",
      "presentation": {
        "hidden": false,
        "group": "ui-tests",
        "order": 1
      }
    },
    {
      "name": "Attach to GAS in K8S",
      "port": "${input:tiltPort}",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "remoteRoot": "/runtime/server",
      "localRoot": "${workspaceFolder}/${input:tiltLocalRoot}",
      "presentation": {
        "hidden": false,
        "group": "ui-tests",
        "order": 1
      }
    }
  ],
  "inputs": [
    {
      "id": "tiltPort",
      "type": "pickString",
      "description": "The port of the service",
      "options": ["9230", "9240", "9250", "9260"],
      "default": "9230"
    },
    {
      "id": "tiltLocalRoot",
      "type": "pickString",
      "description": "The root of the app locally",
      "options": ["backend", "mock/domain-ui-generic"],
      "default": "backend"
    },
    {
      "id": "kubernetesMasterNode",
      "type": "pickString",
      "description": "The host of the kubernetes master node.",
      "options": [
        "demo.drop.gas.10.196.126.161.nip.io",
        "demo.release.gas.10.196.126.162.nip.io",
        "localhost:3001"
      ],
      "default": "demo.drop.gas.10.196.126.161.nip.io"
    },
    {
      "id": "servicePath",
      "type": "pickString",
      "description": "The path of the service on the kubernetes master node.",
      "options": ["/adp_ui_service", ""],
      "default": "/adp_ui_service"
    }
  ]
}
